<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ACycleMaui.Views"
    xmlns:viewModels="clr-namespace:ACycleMaui.ViewModels"
    x:Class="ACycleMaui.Views.DebuggingView"
    Title="DebuggingPage"
    x:DataType="viewModels:DebuggingViewModel">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="{x:Binding NodeUuidLabelText}" />

        <Button
            Text="Open App Data Directory in Explorer"
            Command="{x:Binding OpenDataDirectoryCommand}" />
    </VerticalStackLayout>
</views:ContentPageBase>
