<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ACycleMaui.Views.DiaryEditorView"
             Title="DiaryEditor">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Title" />
            <Entry />
            <DatePicker />
            <TimePicker />
            <Label Text="Content" />
            <Editor HeightRequest="200" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
