<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ACycleMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ACycleMaui.Views">

    <Shell.FlyoutBehavior>
        <OnPlatform x:TypeArguments="FlyoutBehavior">
            <On Platform="WinUI" Value="Locked" />
            <On Platform="Android" Value="Flyout" />
        </OnPlatform>
    </Shell.FlyoutBehavior>

    <ShellContent
        Title="Focus"
        ContentTemplate="{DataTemplate views:FocusView}"
        Route="Focus" />

    <ShellContent
        Title="Acitivity"
        ContentTemplate="{DataTemplate views:AcitivityView}"
        Route="Acitivity" />

    <ShellContent
        Title="Debugging"
        ContentTemplate="{DataTemplate views:DebuggingView}"
        Route="Debugging" />
</Shell>
