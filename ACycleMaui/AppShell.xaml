<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ACycleMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ACycleMaui.Pages">

    <Shell.FlyoutBehavior>
        <OnPlatform x:TypeArguments="FlyoutBehavior">
            <On Platform="WinUI" Value="Locked" />
            <On Platform="Android" Value="Flyout" />
        </OnPlatform>
    </Shell.FlyoutBehavior>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Focus"
        ContentTemplate="{DataTemplate pages:FocusPage}"
        Route="FocusPage" />

    <ShellContent
        Title="Debugging"
        ContentTemplate="{DataTemplate pages:DebuggingPage}"
        Route="Debugging" />
</Shell>
