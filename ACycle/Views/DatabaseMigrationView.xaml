<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ACycle.Views.DatabaseMigrationView"
    xmlns:views="clr-namespace:ACycle.Views"
    xmlns:viewModels="clr-namespace:ACycle.ViewModels"
    xmlns:ext="clr-namespace:ACycle.Extensions"
    x:DataType="viewModels:DatabaseMigrationViewModel"
    Title="数据库迁移工具">

    <VerticalStackLayout>
        <Label Text="待迁移数据库路径" />
        <Entry Text="{x:Binding MigrationDatabasePath}" />
        <Button Text="迁移" Command="{x:Binding PerformMigrationCommand}" />

        <Editor
            HeightRequest="400"
            Text="{x:Binding MigrationPreview}" />
    </VerticalStackLayout>
</views:ContentPageBase>
